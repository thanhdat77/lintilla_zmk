#include <dt-bindings/zmk/matrix_transform.h>
#include "lintilla-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &default_layout;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <4>;
        //      SW6                              |                              SW6
        //  SW2 SW5 SW9 SW12 SW15 SW18           |           SW18 SW15 SW12 SW9 SW5 SW2
        //  SW1 SW4 SW8 SW11 SW14 SW17           |           SW17 SW14 SW11 SW8 SW4 SW1
        //      SW3 SW7 SW10 SW13 SW16           |           SW16 SW13 SW10 SW7 SW3
        //                        SW19 SW20 SW21 | SW21 SW20 SW19
        map = <
         RC(0,1)                                                                   RC(0,10)
 RC(1,0) RC(1,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)   RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(1,10) RC(1,11)
 RC(2,0) RC(2,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)   RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(2,10) RC(2,11)
         RC(3,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)   RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(3,10)
                         RC(3,3) RC(3,4) RC(3,5)   RC(3,6) RC(3,7) RC(3,8)
        >;
    };

    macro_right_transform: keymap_transform_1 {
        compatible = "zmk,matrix-transform";
        columns = <6>;
        rows = <4>;
        //                               SW6
        //            SW18 SW15 SW12 SW9 SW5 SW2
        //            SW17 SW14 SW11 SW8 SW4 SW1
        //            SW16 SW13 SW10 SW7 SW3
        //  SW21 SW20 SW19
        map = <
                                                            RC(0,4)
                            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(1,4) RC(1,5)
                            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(2,4) RC(2,5)
                            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(3,4)
            RC(3,0) RC(3,1) RC(3,2)
        >;
    };
};

